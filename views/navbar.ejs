<!-- Sidebar Navigation -->
<div id="sidebar" class="sidebar">
    <div class="sidebar-header">
        <img src="/images/postbanklogo.jpg" alt="Postbank Logo" style="height: 40px; width: auto;">
        <button class="close-btn" onclick="closeNav()">×</button>
    </div>
    <a href="/dashboard" class="<%= currentPage === 'dashboard' ? 'active' : '' %>">Dashboard</a>
    <a href="/create-ticket" class="<%= currentPage === 'create-ticket' ? 'active' : '' %>">Create Ticket</a>
    <a href="/tickets" id="viewticketlink" class="<%= currentPage === 'view-tickets' ? 'active' : '' %>">View Tickets</a>
    <a href="#">My Messages</a>
    <a href="/logout" id="logoutLink">Logout</a>
</div>

<!-- Top Bar with Burger Menu -->
<div class="top-bar">
    <span class="burger-menu" onclick="openNav()">☰</span>
    <span class="top-bar-title">Postbank Ticketing Portal</span>
    <div id="themeToggleBtn" class="theme-toggle-container">
        <label class="theme-toggle-label">
            <script>
                const isDarkInitial = document.documentElement.getAttribute('data-theme-initial') === 'dark';
                document.write(`<input type="checkbox" id="themeToggleInput" class="theme-toggle-input" ${isDarkInitial ? 'checked' : ''}>`);
            </script>
            <span class="theme-toggle-slider">
                <i class="theme-icon bi bi-sun"></i>
                <i class="theme-icon bi bi-moon"></i>
            </span>
        </label>
    </div>
</div>