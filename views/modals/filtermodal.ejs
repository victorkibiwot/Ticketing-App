<!-- Modal -->
<div class="modal fade" id="filterModal" tabindex="-1" aria-labelledby="filterModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content shadow-lg border-0 rounded-4">
      <div class="modal-header">
        <h5 class="modal-title" id="filterModalLabel">
          <i class="bi bi-funnel me-2"></i> Advanced Filter Options
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="row g-4">
          <!-- Sort By -->
          <div class="col-md-6">
            <label class="form-label custom-form-label">Sort By</label>
            <div class="d-flex align-items-center gap-2">
              <select id="sortColumn" class="form-select form-select-sm custom-form-select" style="width: 70%;" onfocus="this.size=10;" onblur="this.size=1;" onchange="this.size=1; this.blur();">
                <option value="ticketId">Ticket ID</option>
                <option value="title">Title</option>
                <option value="description">Description</option>
                <option value="department">Department</option>
                <option value="priority">Priority</option>
                <option value="status">Status</option>
                <option value="creatorUsername">Created By</option>
                <option value="assigneeUsername">Assigned To</option>
                <option value="assignedByUsername">Assigned By</option>
                <option value="createdAt" selected>Created Date</option>
                <option value="updatedAt">Updated Date</option>
                <option value="resolvedAt">Resolved Date</option>
                <option value="assignedAt">Assigned Date</option>
                <option value="closedAt">Closed Date</option>
                <option value="closedBy">Closed By</option>
                <option value="resolvedBy">Resolved By</option>
                <option value="isClosed">Is Closed</option>
                <option value="isResolved">Is Resolved</option>
              </select>
              <button id="sortOrderBtn" class="btn btn-sm btn-outline-secondary custom-form-button px-2">
                <i class="bi bi-arrow-up"></i>
              </button>
            </div>
          </div>
          


          <!-- Filter By Date -->
          <div class="col-md-6">
            <label for="dateType" class="form-label custom-form-label">Filter By Date</label>
            <div class="d-flex align-items-center gap-2">
              <select id="dateType" class="form-select form-select-sm custom-form-select" style="width: 30%;">
                <option value="createdAt">CreatedAt</option>
                <option value="updatedAt">UpdatedAt</option>
                <option value="resolvedAt">ResolvedAt</option>
                <option value="closedAt">ClosedAt</option>
              </select>
              <input type="date" id="startDate" class="form-control form-control-sm custom-form-input" style="width: 35%;">
              <input type="date" id="endDate" class="form-control form-control-sm custom-form-input" style="width: 35%;">
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-light custom-form-button" data-bs-dismiss="modal">Cancel</button>
        <button type="button" id="applyFilters" class="btn btn-primary custom-form-button">Apply</button>
      </div>
    </div>
  </div>
</div>